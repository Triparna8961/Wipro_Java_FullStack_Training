version: '3.8'

services:
  app:
    build: .
    container_name: springboot-app
    ports:
      - "${APP_ROOT}:8083"
    environment:
      SPRING_DATASOURCE_URL: jdbc:mysql://localhost:3306/Library_database?createDatabaseIfNotExist=true
      SPRING_DATASOURCE_USERNAME: root
      SPRING_DATASOURCE_PASSWORD: Password@1
    depends_on:
      mysqldb:
        condition: service_healthy

  mysqldb:
    image: mysql:8.0
    container_name: springboot-mysql
    environment:
      MYSQL_ROOT_PASSWORD: Password@1
      MYSQL_DATABASE: lms_db     
    ports:
      - "3307:3306"
    volumes:
      - db_data:/var/lib/mysql
    healthcheck:
      test: ["CMD", "mysqladmin", "ping", "-h", "localhost","-u","root","-pPassword@1"]
      interval: 5s
      retries: 20
      start_period: 10s

volumes:
  db_data: